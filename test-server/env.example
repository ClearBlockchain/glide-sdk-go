# Glide API Configuration
# Get your API key from Glide Identity dashboard
GLIDE_API_KEY=your_api_key_here
GLIDE_API_BASE_URL=https://api.glideidentity.app
GLIDE_AUTH_BASE_URL=https://oidc.gateway-x.io

# Debug Logging Configuration
# Enable debug logging for detailed SDK logs (development only)
GLIDE_DEBUG=false
# Alternatively, set specific log level: silent, error, warn, info, debug
GLIDE_LOG_LEVEL=error

# Server Configuration
PORT=3001

# CORS Configuration
ALLOWED_ORIGIN=http://localhost:3000
